---
import { Icon } from '@astrojs/starlight/components';

interface Props {
  locale: string | undefined;
}
---

<p class="sl-flex">
  <Icon
    name={'warning'}
    size="1.5em"
    color="var(--sl-color-orange-high)"
  /><span
    >Currently, only the English version of the documentation is available. If
    you'd like to help translate the documentation, please go to the GitHub
    repository and submit a pull request.
  </span>
</p>

<style>
  p {
    border: 1px solid var(--sl-color-orange);
    padding: 0.75em 1em;
    background-color: var(--sl-color-orange-low);
    color: var(--sl-color-orange-high);
    width: max-content;
    max-width: 100%;
    align-items: center;
    gap: 0.75em;
    font-size: var(--sl-text-body-sm);
    line-height: var(--sl-line-height-headings);
  }
</style>
